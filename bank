    <div class="modal" id="bank-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Add Bank</h3>
                <button class="modal-close" onclick="closeModal('bank-modal')">
                    <i data-lucide="x"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="bankForm">
                    <div class="form-group">
                        <label class="form-label">Bank Name</label>
                        <input type="text" class="form-input" id="bankName" placeholder="Enter bank name" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal('bank-modal')">Cancel</button>
                <button class="btn btn-primary" onclick="saveBank()">Save</button>
            </div>
